# Firecrawl v2 API
# Web crawling and scraping service
FIRECRAWL_URL=http://localhost:4200
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ⚠️ SECURITY: Webhook Secret (REQUIRED in production)
# Used to verify webhook signatures from Firecrawl using HMAC-SHA256
# Generate a strong random secret: openssl rand -hex 32
# Application will fail to start in production (DEBUG=false) if not set
FIRECRAWL_WEBHOOK_SECRET=

# Qdrant Vector Database
# Vector search and storage
QDRANT_URL=http://localhost:4203
QDRANT_API_KEY=
QDRANT_COLLECTION=graphrag

# TEI Embeddings Service
# Text Embeddings Inference (default: Qwen3-0.6B)
TEI_URL=http://localhost:4207

# Reranker Service
# Cross-encoder for result reranking (default: Qwen3-0.6B)
RERANKER_URL=http://localhost:4208

# Qwen3-4B via Ollama
# Local LLM inference for RAG responses
OLLAMA_URL=http://localhost:4214
OLLAMA_MODEL=qwen3:4b

# Webhook Configuration
# Base URL for Firecrawl webhooks (must be accessible from Firecrawl service)
# For local development: http://localhost:4400
# For production: https://your-domain.com
WEBHOOK_BASE_URL=http://localhost:4400

# API Server Configuration (Optional)
# API_HOST=0.0.0.0
# API_PORT=4400
# API_RELOAD=true

# Language Filtering
# Enable automatic language detection and filtering
ENABLE_LANGUAGE_FILTERING=false
# Comma-separated list of allowed language codes (e.g., en,es,fr)
ALLOWED_LANGUAGES=en
# Filter mode: "strict" (reject unknown) or "lenient" (allow unknown/short text)
LANGUAGE_FILTER_MODE=lenient
