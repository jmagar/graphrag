# Firecrawl Configuration
# Web crawling and scraping service
FIRECRAWL_URL=http://localhost:4200
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Qdrant Vector Database
# Vector search and storage
QDRANT_URL=http://localhost:4203
QDRANT_API_KEY=
QDRANT_COLLECTION=graphrag

# TEI Embeddings Service
# Text Embeddings Inference (default: Qwen3-0.6B)
TEI_URL=http://localhost:4207

# Reranker Service
# Cross-encoder for result reranking (default: Qwen3-0.6B)
RERANKER_URL=http://localhost:4208

# Ollama LLM Service
# Local LLM inference (default: Qwen3-4B)
OLLAMA_URL=http://localhost:4214
OLLAMA_QWEN4B=qwen3:4b

# Backend API Configuration
# Uncomment and configure if needed
# API_HOST=0.0.0.0
# API_PORT=4400
# WEBHOOK_BASE_URL=http://localhost:4400

# Redis Configuration
# Used for caching and webhook deduplication
REDIS_HOST=steamy-wsl
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Feature Flags
ENABLE_STREAMING_PROCESSING=true
ENABLE_LANGUAGE_FILTERING=false

# Language Filtering (only applies if ENABLE_LANGUAGE_FILTERING=true)
# Comma-separated list of allowed language codes (ISO 639-1)
ALLOWED_LANGUAGES=en
# Filter mode: "strict" (only allowed languages) or "lenient" (allow unknown)
LANGUAGE_FILTER_MODE=lenient

# Anthropic Claude API
# Required for Claude Agent SDK
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Frontend Configuration
# Add to apps/web/.env.local
# NEXT_PUBLIC_API_URL=http://localhost:4400

# Crawl Defaults
# Default maximum depth for web crawls (number of link levels to follow)
NEXT_PUBLIC_CRAWL_MAX_DEPTH=3
# Default maximum number of pages to crawl
NEXT_PUBLIC_CRAWL_MAX_PAGES=100
# Maximum allowed depth limit (upper bound for user-specified values)
NEXT_PUBLIC_CRAWL_MAX_DEPTH_LIMIT=10
# Maximum allowed pages limit (upper bound for user-specified values)
NEXT_PUBLIC_CRAWL_MAX_PAGES_LIMIT=1000
